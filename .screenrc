# caption always "%{= Kw}%-w%{= Bk} %n %t %{-}%+w %-= @%H"
# hardstatus alwaysignore
# vbell off

# To clear the screen after closing some programs
altscreen on

# Programs opening by default
screen -t "BASH" 1 
# screen -t "MPD" 2 ncmpc
# screen -t "IRC" 3 irssi
# screen -t "PYTHON" 8 ipython
screen -t "HTOP" 9 htop
screen -t "BASH" 0 

# Keys
bindkey -k k; quit

# COLORS! and some useful terminfo
term screen-256color
# terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# Do not show startup message
startup_message off

bind ^x
bind ^x stuff "screen -X chdir \$PWD;screen^M"

escape ^kk
